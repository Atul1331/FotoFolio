<% include ./partials/header.ejs %> <!-- Including header component -->

<!-- We will write the main component of each file between these header and footer components -->

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10 ">
        <% posts.forEach(function(elem){ %>
            <div class="card w-32">
                <div class=" w-full h-40 rounded-lg bg-sky-200 overflow-hidden ">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h4 class="mt-2 text-sm"><%= elem.title %></h4>
                <h6 class="text-xs font-opacity-30">@<%= elem.user.username %></h6>
            </div>
        <% }) %>
    </div>
</div>


